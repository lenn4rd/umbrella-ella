source 'https://rubygems.org'
ruby   '2.2.2'

gem 'rails', '4.2.3'

# Backend
gem 'figaro'
gem 'hurley'
gem 'redis-persistence'

# Frontend
gem 'coffee-rails', '~> 4.1.0'
gem 'jbuilder', '~> 2.0'
gem 'jquery-rails'
gem 'sass-rails', '~> 5.0'
gem 'turbolinks'
gem 'uglifier', '>= 1.3.0'

# Documentation
gem 'sdoc', '~> 0.4.0', group: :doc

group :development do
  gem 'awesome_print'
  gem 'meta_request'
  gem 'quiet_assets'
  gem 'shog'
end

group :development, :test do
  gem 'byebug'
  gem 'factory_girl_rails'
  gem 'rspec-rails'
  gem 'spring'
  gem 'spring-commands-rspec'
  gem 'web-console', '~> 2.0'
end

group :test do
  gem 'capybara'
  gem 'shoulda-matchers', require: false
  gem 'sinatra', require: false
  gem 'webmock'
end

group :production do
  gem 'rails_12factor'
end
